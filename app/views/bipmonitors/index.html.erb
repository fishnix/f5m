<p id="notice"><%= notice %></p>

<h3>Bipmonitors</h3>

<b>Name:</b>
<%= @bip_config.name %>

<table>
	<tr>
		<th>Name</th>
		<th>Content</th>
	</tr>
	<% @bipmonitors.each do |bip_monitor| %>
		<tr>
		<td><%= bip_monitor.name %></td>
		<td>
			<% bip_monitor.content.each do |m| %>
				<%= m %><br />
			<% end %>	
		</td>
		</tr>
	<% end %>
</table>

<%= link_to 'Back', bip_config_path(@bip_config) %>